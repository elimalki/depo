    <style name="apk_version">
        <item name="android:textColor">@color/colorApkVersion</item>
        <item name="android:textSize">@dimen/TextViewApkVersionSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_width">wrap_content</item>
